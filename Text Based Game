package first game

import java.util.Random;
import java.util.Scanner;

public class Main {
    public static void main(String[] args)  {
    
      // System objects
      Scanner in = new scanner(System.in);
      Random rand = new Random();
      
      String[ ] enemies = {"Wolf", "Bear", "Cougar", "Lion", "Tiger", "Cobra", "Alligator" }; 
       
       int maxEnemyHealth = 75;
       int EnemyAttackDamage = 55;
       
       // Player Variables
       
      int health = 125;
      int AttackDamage = 25;
      int numFirstAidKit = 2;
      int FirstAidKitHealAmount = 20;
      int FirstAidKitDropChance = 45;   //Percentage
      

      Boolean running = true;

      System.out.printIn("Welcome to the Jungle");

      GAME:
      while(running)   {
              System.out.printIn("--------------------------------------------------")
               
               int EnemyHealth = rand.nextInt (maxEnemyHealth) ;
               String enemy = enemies[rand.nextInt (enemies.length)] ;
               System.out.printIn("\t# " + enemy + " has appeared!  #\n");
               
      }

       
    
    
    }
}
